mixin vendor-preloader(modifier)
  section(style="height: 100vh; width: 100vw; background-color: #393E46;").vendor-preloader&attributes(attributes)
    //- если указать в html, то при загрузке страницы эти значения будут сразу выведенны на экран и не будет этих скачков при загрузке экране
    .vendor-preloader__wrapper
      .vendor-preloader__circle
        .vendor-preloader__circle-line.vendor-preloader__circle-line--1
        .vendor-preloader__circle-line.vendor-preloader__circle-line--2
        .vendor-preloader__circle-line.vendor-preloader__circle-line--3
        .vendor-preloader__circle-line.vendor-preloader__circle-line--4
        .vendor-preloader__circle-line.vendor-preloader__circle-line--5
        .vendor-preloader__circle-line.vendor-preloader__circle-line--6
        .vendor-preloader__circle-line.vendor-preloader__circle-line--7
        .vendor-preloader__circle-line.vendor-preloader__circle-line--8
        .vendor-preloader__circle-line.vendor-preloader__circle-line--9
